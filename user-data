## template: jinja
#cloud-config
disable_root: false

write_files:
  - path: /etc/tom
    content: |
      This is data from the installation.
      This is another line.
    owner: root:root
    permissions: '0644'

#MOUNTS
mounts:
  - ["/dev/vdb", "none", "swap", "sw", "0", "0"]
  - ["/dev/mapper/web-docroot", "/var/www/",  "auto", "defaults", "0", "0"]

#PACKAGES
# packages-general
packages:
  - python3
  - lsof
  - netcat
  - xinetd
  - zip
  - apache2
  - apt-mirror

#BOOTCMD
bootcmd:
 - mkswap /dev/vdb
 - swapon /dev/vdb
 - pvcreate /dev/vdc
 - vgcreate web /dev/vdc
 - lvcreate --name docroot -l 100%FREE web
 - mke2fs -j /dev/web/docroot
 

#APT

ntp:
  enabled: true
  ntp_client: ntp

chpasswd:
  list: |
    root:$1$xyz$quBhc72d/1S/7c2IIRk7k1
  expire: False

manage_etc_hosts: True

apt_update: true

apt_upgrade: true

ssh_pwauth: True

users:
  - name: ubuntu
    ssh-authorized_keys:
      - ssh-rsa  sandholm@beast4
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    shell: /bin/bash

#RUNCMD
runcmd:
  - echo '{{ ds.meta_data.role }}' > /etc/role
  - echo '{{ ds.meta_data.aenv }}' > /etc/aenv
  - update-grub
  - apt autoremove -y
  - touch /etc/cloud/cloud-init.disabled
  - eject
  - mkdir -p /var/www/html/ubuntu/var
  - chown -R www-data:www-data /var/www
  - cp /etc/apt/mirror.list /etc/apt/mirror.list.orig
  - sed -i 's/^.*base_path.*$/set base_path /var/www/html/ubuntu' /etc/apt/mirror.list
  - shutdown -h now
